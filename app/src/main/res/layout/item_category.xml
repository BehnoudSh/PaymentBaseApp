<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_categories_parent"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="@dimen/small_gap"
    android:clickable="true"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_categories_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         android:gravity="center"
        android:padding="@dimen/small_gap"
        android:text="testtesttest"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_txt_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_item_categories_title"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/iv_item_categories_icon"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/playstoreicon" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.5" />
    </LinearLayout>


</RelativeLayout>


