<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_categories_parent"
    android:layout_width="100dp"
    android:layout_margin="@dimen/small_gap"
    android:layout_height="100dp"

    android:background="@drawable/bg_custom_elevation"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_categories_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/default_gap"
        android:gravity="center"
        android:text="testtesttest"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/iv_item_categories_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/tv_item_categories_title"
        android:padding="@dimen/default_gap"
        android:scaleType="fitCenter" />


</RelativeLayout>


