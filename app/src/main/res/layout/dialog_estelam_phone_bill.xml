<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:orientation="vertical">


    <include
        android:id="@+id/activity_main_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="استعلام مبلغ قبض تلفن ثابت برای تمام شهرهای ایران است و لازم است شماره تلفن را به همراه پیش شماره وارد نمایید."
            android:textColor="@color/gray_dolphin"
            android:textSize="@dimen/default_txt_size"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:background="@drawable/bg_rounded_white_gray_stroke"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_activity_cat_level2_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:hint="مثلا ۰۲۱۸۷۶۵۴۳۲۱"
                android:imeOptions="actionSearch"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="@dimen/large_gap"
                android:singleLine="true"
                android:textColor="@color/gray_dolphin"
                android:textColorHint="@color/transparent_black_hex_2"
                android:textSize="@dimen/normal_txt_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_gap"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/default_gap"
            android:paddingRight="@dimen/default_gap">

            <Button
                android:id="@+id/estelamBill_payandore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="@dimen/default_gap"
                android:text="پایان‌دوره" />


            <Button
                android:id="@+id/estelamBill_miandore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="@dimen/default_gap"
                android:text="میان‌دوره" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>