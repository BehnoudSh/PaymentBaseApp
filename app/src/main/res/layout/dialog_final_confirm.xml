<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_smoke"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/tv_dialog_final_confirm_txtOperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/small_gap"
        android:textColor="@color/gray_dolphin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_gap"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/small_gap"
            android:text="تومان"
            android:textColor="@color/gray_dolphin"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tv_dialog_final_confirm_txtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:gravity="center_vertical|left"
            android:padding="@dimen/small_gap"
            android:text="20000"
            android:textColor="@color/gray_dolphin"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_gap"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_dialog_final_confirm_txtMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/light_gray"
            android:gravity="center_vertical|right"
            android:padding="@dimen/small_gap"

            android:text="09122409981"
            android:textColor="@color/gray_dolphin"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:padding="@dimen/small_gap"
            android:text="برای شماره‌ی "
            android:textColor="@color/gray_dolphin"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/small_gap"

        android:text="اطمینان دارید؟"
        android:textColor="@color/gray_dolphin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_gap"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_gap"
        android:paddingRight="@dimen/default_gap">

        <Button
            android:id="@+id/btn_dialog_final_confirm_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_weight="1"
            android:background="@color/gray_dolphin"
            android:padding="@dimen/default_gap"
            android:text="خیر"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btn_dialog_final_confirm_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:background="@color/holder4"
            android:padding="@dimen/default_gap"
            android:text="بله" />

    </LinearLayout>

</LinearLayout>