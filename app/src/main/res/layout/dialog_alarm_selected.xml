<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/large_gap"
    android:background="@drawable/bg_rounded_white_gray_stroke"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_gap"

        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_dialog_carlist_price_companyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_gap"
            android:text="درخواست شما ثبت شد"
            android:textColor="@color/green"
            android:textSize="@dimen/medium_text_size" />


        <ImageView
            android:id="@+id/iv_dialog_currency_alarm_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/success" />


    </LinearLayout>


    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_gap"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/default_gap"
        android:textColor="@color/gray_dolphin"
        android:textSize="@dimen/normal_txt_size" />

    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/large_gap"
        android:padding="@dimen/default_gap"
        android:text="باشه" />
</LinearLayout>