<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/holder1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item1Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"

                android:padding="50dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/item1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item1Img"
                android:gravity="center"
                android:textColor="@color/gray_dolphin" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/holder2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item2Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/item2Title"
                android:padding="50dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/item2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/gray_dolphin" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/holder3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item3Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/item3Title"
                android:padding="50dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/item3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/gray_dolphin" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/holder4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/item4Img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/item4Title"
                android:padding="50dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/item4Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textColor="@color/gray_dolphin" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>