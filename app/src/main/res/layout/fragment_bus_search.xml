<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/large_gap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_currency_groups"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/large_gap">

                <ImageView
                    android:id="@+id/iv_fragment_bus_search_clearSource"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear_edittext"
                    android:visibility="invisible" />

                <android.support.design.widget.TextInputLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_fragment_bus_search_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_gap"
                        android:layout_marginRight="@dimen/small_gap"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="مبدا"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:nextFocusDown="@+id/fragment_bus_search_destination"
                        android:textSize="@dimen/default_txt_size" />
                </android.support.design.widget.TextInputLayout>


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/red_error" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_gap"
                android:background="@drawable/bg_currency_groups"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_fragment_bus_search_clearDestination"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_clear_edittext"
                    android:visibility="invisible" />

                <android.support.design.widget.TextInputLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_fragment_bus_search_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_gap"
                        android:layout_marginRight="@dimen/small_gap"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="مقصد"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="@dimen/default_gap" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/red_error" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_bus_search_datePicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_gap"
                android:background="@drawable/bg_currency_groups"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/large_gap">

                <TextView
                    android:id="@+id/tv_fragment_bus_search_datePicked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/large_gap"
                    android:layout_weight="1"
                    android:text="تاریخ را انتخاب نمایید"
                    android:textSize="@dimen/normal_txt_size" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/red_error" />

            </LinearLayout>


            <Button
                android:id="@+id/bt_fragment_bus_search_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_gap"
                android:layout_marginLeft="@dimen/large_gap"

                android:gravity="center"
                android:text="جستجو"
                android:textSize="@dimen/large_text_size"


                android:textStyle="bold" />

        </LinearLayout>


    </ScrollView>

</FrameLayout>
