<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_main_toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/large_gap"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="@dimen/large_gap">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/default_gap">

                        <ImageView
                            android:id="@+id/iv_deleteSource"
                            android:layout_width="@dimen/large_gap"
                            android:layout_height="@dimen/large_gap"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_clear_edittext"
                            android:tint="@color/gray_dolphin"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/tv_activity_bus_source"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/default_gap"
                            android:text="مبدا"
                            android:textColor="@color/gray_dolphin"
                            android:textSize="@dimen/default_txt_size" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/departures" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_gap"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/default_gap">

                        <ImageView
                            android:id="@+id/iv_deleteDestination"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_clear_edittext"
                            android:tint="@color/gray_dolphin"
                            android:visibility="invisible" />


                        <TextView
                            android:id="@+id/tv_activity_bus_destination"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/default_gap"
                            android:text="مقصد"
                            android:textColor="@color/gray_dolphin"
                            android:textSize="@dimen/default_txt_size" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/arrivals" />


                    </LinearLayout>

                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:background="@drawable/gradiant" />-->

                    <LinearLayout
                        android:id="@+id/dateholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/large_gap"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/default_gap">


                        <TextView
                            android:id="@+id/datetimebus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="1396-11-23"
                            android:textColor="@color/gray_dolphin"
                            android:textSize="@dimen/default_txt_size" />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_calendar"
                            android:tint="@color/gray_dolphin" />


                    </LinearLayout>
                    <!--<Button-->
                    <!--android:id="@+id/bt_fragment_bus_search_search"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="20dp"-->
                    <!--android:layout_marginLeft="20dp"-->

                    <!--android:gravity="center"-->
                    <!--android:text="جستجو"-->
                    <!--android:textSize="20dp"-->


                    <!--android:textStyle="bold" />-->
                    <Button
                        android:id="@+id/searchBus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_gap"
                        android:padding="@dimen/default_gap"
                        android:text="جستجو" />

                </LinearLayout>


            </ScrollView>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/default_gap"
            android:src="@drawable/notification"
            app:fabSize="normal" />
    </RelativeLayout>

</LinearLayout>
