<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.zarjame.haftrang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="ir.zarjame.haftrang.Application.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <service android:name="ir.zarjame.haftrang.AlarmManager.CurrencyBackgroundService" />

        <receiver android:name="ir.zarjame.haftrang.AlarmManager.CurrencyAlarmReceiver" />
        <receiver android:name="ir.zarjame.haftrang.AlarmManager.CurrencyBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <service android:name="ir.zarjame.haftrang.AlarmManager.FlightBackgroundService" />

        <receiver android:name="ir.zarjame.haftrang.AlarmManager.FlightAlarmReceiver" />
        <receiver android:name="ir.zarjame.haftrang.AlarmManager.FlightBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <service android:name="ir.zarjame.haftrang.AlarmManager.BusBackgroundService" />

        <receiver android:name="ir.zarjame.haftrang.AlarmManager.BusAlarmReceiver" />
        <receiver android:name="ir.zarjame.haftrang.AlarmManager.BusBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <activity
            android:name="ir.zarjame.haftrang.Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ir.zarjame.haftrang.Activity.CurrencyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.GoodsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.NewsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.BusActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.FlightActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="ir.zarjame.haftrang.Activity.AlarmListActivity"

            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>


        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />


        <service android:name="ir.zarjame.haftrang.FirebaseNotification.FireIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="ir.zarjame.haftrang.FirebaseNotification.FireMsgService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>